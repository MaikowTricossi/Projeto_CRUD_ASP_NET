<body class="Body_Recursos">
    <header>
        <div class="Header"></div>
    </header>
    <div class="div_Painel">
        <nav>
            <ul>
                <a href="../Home/Index.cshtml"><img class="Img2" src="~/imagens/img2.png" alt="Descrição da Imagem"></a>
                <tr><a class="Painel" href="./Plataforma.cshtml">Plataforma</a></tr>
